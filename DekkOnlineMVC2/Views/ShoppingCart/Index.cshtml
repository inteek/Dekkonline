                                <div class="col-md-4 col-xs-2 margininput">
                                    <input type="text" class="form-control" id="promocode" value="@Model.promocode" />
                                </div>
                                <div class="col-md-3 col-xs-2"> <label class="" style="margin-top:7px;color:blue;"><a><span class="linkcolor2">APPLY</span></a></label></div>
                            </div>

                            <div class="form-group" style="border-bottom:1px solid #ddd">
                                <label class="col-md-5 col-xs-2 control-label">Use your Points:</label>
                                <div class="col-md-3 col-xs-2 margininput">
                                    <input type="text" class="form-control margintextpoints" id="promopoints" value="@Model.points" style="margin-bottom:5px">
