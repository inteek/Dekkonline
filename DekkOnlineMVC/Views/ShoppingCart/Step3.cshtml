<div class="container" style="font-family:Arial;margin-bottom:50px;">

    <div class="row" style="border-bottom:1px solid #ddd">
        <table id="cart" class="table table-hover table-condensed tabl1">
            <thead>
                @if (Model.cart.Count > 0)
                {

                    <tr>
                        <th style="width:40%">Item</th>
                        <th style="width:8%">QTY</th>
                        <th style="width:10%">Unit Price</th>
                        <th style="width:10%">Sub Total</th>
                    </tr>
                }
                else
                {
                    <tr>
                        <th style="width:80%">Item</th>
                    </tr>
                }
            </thead>
            <tbody>
                @if (Model.cart.Count > 0)
                {
                    foreach (var item in Model.cart)
                    {
                        <tr class="@item.cartid">

                            <td data-th="Item">
                                <div class="row">
                                    <div class="col-sm-2 col-xs-3">
                                        <img src="http://admin.dekkonline.sonetworks.no/@item.Image" alt="..." style="height:85px;width:85px;" class="img-responsive " />
                                    </div>
                                    <div class="col-sm-8 col-xs-5">
                                        <h4 class="nomargin"><strong style="color:#e72e31">@item.Name</strong></h4>
                                        <div class="deschide"><p>@item.Description.</p></div>
                                        <div class="deschide"><p>Size: @item.proDimensionWidth / @item.proDimensionprofile  @item.proDimensionDiameter</p></div>
                                    </div>
                                </div>
                            </td>
                            <td data-th="QTY">
                                <input type="number" class="form-control text-center qtyprodcart " min="1" value="@item.quantity" size="3" autocomplete="off" disabled="disabled" style="margin-left:-45px;">
                            </td>
                            <td data-th="Unit Price"><strong><label id="@item.cartid" style="margin-left:12px;">@item.UnitPrice</label> kr</strong></td>
                            <td data-th="Sub Total"><strong><label id="@item.cartid" style="margin-left:13px;">@item.totalpriceprod</label> kr</strong></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td data-th="Item">
                            <div class="row">
                                <div class="col-sm-8 col-xs-8">
                                    <br />
                                    <div><p>Empty.</p></div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                @if (Model.services.Count > 0)
                {
                    foreach (var item in Model.services)
                    {
                    <tr>

                        <td data-th="Item">
                            <div class="row">
                                <div class="col-sm-2 col-xs-3">
                                    <img src="@item.WorkshopImage" alt="..." style="height:85px;width:85px;" class="img-responsive " />
                                </div>
                                <div class="col-sm-8 col-xs-5">
                                    <h4 class="nomargin"><strong style="color:#176292">@item.WorkshopName Service:</strong></h4>
                                    <div class="deschide"><p>@item.Name.</p></div>
                                </div>
                                
                            </div>
                        </td>
                        <td data-th="QTY">
                            <input type="number" class="form-control text-center qtyprodcart " min="1" value="1" size="3" autocomplete="off" disabled="disabled" style="margin-left:-45px;">
                        </td>
                        <td data-th="Unit Price">
                            <div class="row">
                                <div class="col-sm-12 col-xs-12" style="margin-left:12px;">
                                    <strong>@item.Price kr</strong>
                                </div>
                            </div>
                        </td>
                        <td data-th="Sub Total">
                            <div class="row">
                                <div class="col-sm-12 col-xs-12" style="margin-left:13px;">
                                    <strong>@item.Price kr</strong>
                                </div>
                            </div>
                        </td>
                    </tr>
                    }
                }
                else
                {
                    <tr>
                        <td data-th="Item">
                            <div class="row">
                                <div class="col-sm-8 col-xs-8">
                                    <br />
                                    <div><p>No services extra.</p></div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row"><br /></div>
    <div class="row total">
        <div class="col-lg-7 ipadtry">
            <div class="form-group">
                <strong style="font-size:larger;">
                    PROMO CODE: @if (Model.Promo != null)
                    {
                        <strong style="color:#1a64a1">APPLIED</strong>
                    }
                    else
                    {
                        <strong style="color:#1a64a1">NO APPLIED</strong>
                    }
                </strong>
            </div>
            <div class="form-group">
                <strong style="font-size:larger;">SUBTOTAL: @Model.SubTotal kr</strong>
            </div>
            <div class="form-group">
                <strong style="font-size:larger;">TAX: @Model.taxproduct kr</strong>
            </div>
            <div class="form-group">
                <strong style="font-size:larger;">TOTAL: @Model.Total kr</strong>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-lg-6">
            <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>Personal Information: </strong></label>
