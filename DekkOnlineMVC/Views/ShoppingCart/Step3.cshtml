@using System.Web.Optimization;
@model Framework.Libraies.ResultProductsConfirmation
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Styles/Dimension.css?V=5")
@Styles.Render("~/Styles/Shoppingcart.css?V=7")
<div class="row">
    <div class="col-lg-12 ">
        <img src="~/Content/imgs/Step3.png" class="imgwidth1 img-responsive" />
        <img src="~/Content/imgs/step3mobile.PNG" class="img-responsive imgmobile" />
    </div>
</div>
<div class="container" style="font-family:Arial">

    <div class="row" style="border-bottom:1px solid #ddd">
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                @if (Model.cart.Count > 0)
                {

                    <tr>
                        <th style="width:50%">Item</th>
                        <th style="width:8%">QTY</th>
                        <th style="width:10%">Price</th>
                    </tr>
                }
                else
                {
                    <tr>
                        <th style="width:80%">Item</th>
                    </tr>
                }
            </thead>
            <tbody>
                @if (Model.cart.Count > 0)
                {
                    foreach (var item in Model.cart)
                    {
                        <tr>

                            <td data-th="Item">
                                <div class="row">
                                    <div class="col-sm-2 col-xs-3">
                                        <img src="http://admin.dekkonline.sonetworks.no/@item.Image" alt="..." style="height:85px;width:85px;" class="img-responsive " />
                                    </div>
                                    <div class="col-sm-8 col-xs-5">
                                        <h4 class="nomargin"><strong style="color:#176292">@item.Name</strong></h4>
                                        <div class="deschide"><p>@item.Description.</p></div>
                                    </div>
                                </div>
                            </td>
                            <td data-th="QTY">
                                @*<input type="number" class="form-control text-center qtyprodcart" min="1" value="@item.quantity" size="3" autocomplete="off" onkeydown="return false" disabled="disabled">*@
                                <strong>@item.quantity</strong>
                            </td>
                            <td data-th="Price"><strong>@item.totalpriceprod kr</strong></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td data-th="Item">
                            <div class="row">
                                <div class="col-sm-8 col-xs-8">
                                    <br />
                                    <div><p>Empty.</p></div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row total">
        <div class="col-lg-7 ipadtry">
            <div class="form-group">
                <strong style="font-size:larger;">
                    PROMO CODE: @if (Model.Promo != null)
                    {
                        <strong style="color:#1a64a1">APPLIED</strong>
                    }
                    else
                    {
                        <strong style="color:#1a64a1">NO APPLIED</strong>
                    }
                </strong>
            </div>
            <div class="form-group">
                <strong style="font-size:larger;">TOTAL: @Model.Total kr</strong>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-lg-6">
            <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>Personal Information: </strong></label>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="zipcode" class="col-lg-3 control-label textoAzul">zip code:</label>
                    <label id="zipcode" style="margin-top:10px;"><strong> @Model.ZipCode</strong></label>
                </div>
                <div class="form-group">
                    <label for="Firstname" class="col-lg-3  control-label textoAzul">First name:</label>
                    <label id="Firstname" style="margin-top:10px;"><strong> @Model.FirstName</strong></label>
                </div>
                <div class="form-group">
                    <label for="Lastname" class="col-lg-3 control-label textoAzul">Last name:</label>
                    <label id="Lastname" style="margin-top:10px;"><strong> @Model.LastName</strong></label>
                </div>
                <div class="form-group">
                    <label for="address" class="col-lg-3 control-label textoAzul">Address:</label>
                    <label id="address" class="widthaddresst3"><strong> @Model.Address</strong></label>
                </div>
                <div class="form-group">
                    <label for="email" class="col-lg-3  control-label textoAzul">Email:</label>
                    <label id="email" style="margin-top:10px;"><strong>@Model.Email</strong></label>
                </div>
                <div class="form-group">
                    <label for="mobile" class="col-lg-3 control-label textoAzul">Mobile:</label>
                    <label id="mobile" style="margin-top:10px;"><strong> @Model.Mobile</strong></label>
                </div>
            </form>
        </div>

        <div class="col-lg-6">
            @if (Model.WorkshopName != null)
            {
                <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>The workshop you choose:</strong></label>
            }
            else
            {
                <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>The Address you choose:</strong></label>
            }

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="row">
                        @if (Model.WorkshopName != null)
                        {

                            <div class="col-lg-3">
                                @*<img src="http://admin.dekkonline.sonetworks.no/@Model.Image" style="width:100px; height:100px;" />*@
                                <img src="@Model.Image" style="width:100px; height:100px;" />
                            </div>
                            <div class="col-lg-5">
                                <h4 style="color: #105786; "><strong>@Model.WorkshopName</strong></h4>
                                <p><strong>@Model.WorkshopAddress</strong></p>
                                <h5 style="color: #909497;">Ratings: <img src="~/Content/estrellas.png" style="width:80px;" /></h5>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-5">
                                <h4 style="color: #2471A3; "><strong>@Model.WorkshopAddress</strong></h4>
                            </div>
                        }

                    </div>
                </div>
                <div class="form-group">
                    <label for="Dated" class="col-lg-3 control-label textoAzul">Date:</label>
                    <label id="Dated" style="margin-top:10px;"><strong>@Model.Date</strong></label>
                </div>
                <div class="form-group">
                    <label for="timed" class="col-lg-3  control-label textoAzul">Time:</label>
                    <label id="timed" style="margin-top:10px;"><strong>@Model.Time</strong></label>
                </div>
                <div class="form-group">
                    <label for="commentsd" class="col-lg-3 control-label textoAzul">Comments:</label>

                    @if (Model.Comments == null || Model.Comments == "")
                    {
                        <label id="commentsd" class="widthcomment">
                            <strong>No Comments.</strong>
                        </label>
                    }
                    else
                    {
                        <label id="commentsd" class="widthcomment">
                            <strong>@Model.Comments</strong>
                        </label>
                    }


                </div>

            </form>

        </div>

    </div>
    <div class="row">
        <div class="col-lg-5">
            <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>Payment options:</strong></label>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div style="margin-left:15px">
                        <input type="radio" name="payment" value="1" class="oneradio" /><img src="~/Content/imgs/typepayment1.PNG" style="height:40px;"/>
                        <input type="radio" name="payment" value="2" class="tworadio" /><img src="~/Content/imgs/typepayment2.PNG" style="height:40px;" />
                                                                                        <div> <span class="req1 hidden" style="color:red">*Target Type</span></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="creditCardForm">
            <div class="payment">
                <form>
                    <div class="form-group col-lg-12" id="card-number-field">
                        <div class="col-sm-5 col-xs-8">
                            <label for="cardNumber" class="textoAzul">Card Number:</label>
                            <input class="form-control cn no-spinners" id="cardNumber" pattern="^([0-9 ]+)+$" autocomplete="cc-number" spellcheck="false" data-hj-masked="data-hj-masked" maxlength="16" minlength="16" nonequals="2888 8888 8888" required="" type="tel"><span class="req2 hidden" style="color:red">*Card Number 16 Digits</span>
                        </div>
                        <div class="col-sm-7 col-xs-7">
                            <label class="textoAzul">Expiration Date</label>
                            <div class="col-md-6 col-xs-6">
                                <select class="selectpicker form-control mobile1 monthp" style="width: 120px;height: 41px;">
                                    <option value="01">January</option>
                                    <option value="02">February</option>
                                    <option value="03">March</option>
                                    <option value="04">April</option>
                                    <option value="05">May</option>
                                    <option value="06">June</option>
                                    <option value="07">July</option>
                                    <option value="08">August</option>
                                    <option value="09">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>
                                </select><span class="req3 hidden" style="color:red">*Expiration Date</span>
                            </div>
                            <div class="col-md-6 col-xs-5">
                                <select class="selectpicker form-control mobile1 yeary" style="width: 87px;height: 41px;">
                                    <option value="2018">2018</option>
                                    <option value="2019">2019</option>
                                    <option value="2020">2020</option>
                                    <option value="2021">2021</option>
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                    <option value="2024">2024</option>
                                    <option value="2025">2025</option>
                                    <option value="2026">2026</option>
                                    <option value="2027">2027</option>
                                    <option value="2028">2028</option>
                                    <option value="2029">2029</option>
                                    <option value="2030">2030</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>
    <div class="row">
        <div class="creditCardForm">
            <div class="payment">
                <form>
                    <div class="form-group col-lg-12" id="card-number-field">
                        <div class="form-group CVV col-sm-6 col-xs-3">
                            <label for="cvv" class="textoAzul">Security Code:</label>
                            <div class="input-group"><input  class="form-control sc no-spinners" id="cvv" maxlength="3" minlength="3" pattern="^[0-9]+$" autocomplete="off" spellcheck="false" data-hj-masked="data-hj-masked" type="tel"><span class="input-group-addon"><i class="glyphicon glyphicon-question-sign" style="cursor:pointer"></i></span></div><span class="req4 hidden" style="color:red">*Security Code</span>
                        </div>
                        <div class="form-group owner col-sm-6 col-xs-8">
                            <label for="owner" class="textoAzul">CardHolder name:</label>
                            <input type="text" class="form-control nombretg" id="owner"><span class="req5 hidden" style="color:red">*CardHolder Name</span>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <div class="col-sm-5 col-xs-8 terms">
                <input type="checkbox" name="terms" class="terms2" id="terms2"> <a><span class="linkcolor2 textoAzul">I have read and accepted terms & conditions</span></a>
            </div>
            <div class="col-sm-8 col-xs-7 confirm">
                <br />
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><a><span class="linkcolor textoAzul st2">Back</span></a></label>
                    <div class="col-md-5 col-xs-3 margininput">
                        <input type="button" class="btn btn-primary form-control confirmpay" id="confirmpay" value="CONFIRM & PAY" style="margin-bottom:13px"><span class="req6 hidden" style="color:red">*Accept terms & conditions</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="col-sm-4">
                <label id="required" class="hidden" style="color: #E53935; font-size: 20px; margin-bottom: 20px;margin-left:20px"><strong> *Fields Are Required</strong></label>
            </div>
        </div>

    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/Site/ShoppingCartStep3.js?v=9")
<script>
    $(document).ready(function () {
        $("#principalDiv").attr("class", "prDivSub");
        $("#mainContainDiv").attr("class", "prMainContentSub");
    });
</script>
