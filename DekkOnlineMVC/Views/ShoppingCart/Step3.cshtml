                <div class="form-group">
                    <label for="zipcode" class="col-lg-3 control-label textoAzul">zip code:</label>
                    <label id="zipcode" style="margin-top:10px;"><strong> @Model.ZipCode</strong></label>
                </div>
                <div class="form-group">
                    <label for="Firstname" class="col-lg-3  control-label textoAzul">First name:</label>
                    <label id="Firstname" style="margin-top:10px;"><strong> @Model.FirstName</strong></label>
                </div>
                <div class="form-group">
                    <label for="Lastname" class="col-lg-3 control-label textoAzul">Last name:</label>
                    <label id="Lastname" style="margin-top:10px;"><strong> @Model.LastName</strong></label>
                </div>
                <div class="form-group">
                    <label for="address" class="col-lg-3 control-label textoAzul">Address:</label>
                    <label id="address" class="widthaddresst3"><strong> @Model.Address</strong></label>
                </div>
                <div class="form-group">
                    <label for="email" class="col-lg-3  control-label textoAzul">Email:</label>
                    <label id="email" style="margin-top:10px;"><strong>@Model.Email</strong></label>
                </div>
                <div class="form-group">
                    <label for="mobile" class="col-lg-3 control-label textoAzul">Mobile:</label>
                    <label id="mobile" style="margin-top:10px;"><strong> @Model.Mobile</strong></label>
                </div>
            </form>
        </div>

        <div class="col-lg-6">
            @if (Model.WorkshopName != null)
            {
                <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>The workshop you choose:</strong></label>
            }
            else
            {
                <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>The Address you choose:</strong></label>
            }

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="row">
                        @if (Model.WorkshopName != null)
                        {

                            <div class="col-lg-3">
                                @*<img src="http://admin.dekkonline.sonetworks.no/@Model.Image" style="width:100px; height:100px;" />*@
                                <img src="@Model.Image" style="width:100px; height:100px;" />
                            </div>
                            <div class="col-lg-5">
                                <h4 style="color: #105786; "><strong>@Model.WorkshopName</strong></h4>
                                <p><strong>@Model.WorkshopAddress</strong></p>
                                @*<h5 style="color: #909497;">Ratings: <img src="~/Content/estrellas.png" style="width:80px;" /></h5>*@
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-5">
                                <h4 style="color: #2471A3; "><strong>@Model.WorkshopAddress</strong></h4>
                            </div>
                        }

                    </div>
                </div>
                <div class="form-group">
                    <label for="Dated" class="col-lg-3 control-label textoAzul">Date:</label>
                    <label id="Dated" style="margin-top:10px;"><strong>@Model.Date</strong></label>
                </div>
                <div class="form-group">
                    <label for="timed" class="col-lg-3  control-label textoAzul">Time:</label>
                    <label id="timed" style="margin-top:10px;"><strong>@Model.Time</strong></label>
                </div>
                <div class="form-group">
                    <label for="commentsd" class="col-lg-3 control-label textoAzul">Comments:</label>

                    @if (Model.Comments == null || Model.Comments == "")
                    {
                        <label id="commentsd" class="widthcomment">
                            <strong>No Comments.</strong>
                        </label>
                    }
                    else
                    {
                        <label id="commentsd" class="widthcomment">
                            <strong>@Model.Comments</strong>
                        </label>
                    }


                </div>

            </form>

        </div>

    </div>
    <div class="row">
        <div class="col-lg-5">
            <label style="color: #E53935; font-size: 20px; margin-bottom: 20px; "><strong>Payment options:</strong></label>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <div style="margin-left:15px">
                        <input type="radio" name="payment" value="1" class="oneradio" /><img src="~/Content/imgs/typepayment1.PNG" style="height:40px;" />
