@using System.Web.Optimization;

@{
    ViewBag.Title = "Pending";
}
@Styles.Render("~/Styles/Dimensiones.css?v=6")
<div class="contentPage">
    <div class="row">
        <br />
        <div class="row">
            <div class="col-lg-9"></div>
            <div class="col-lg-1">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-8"> <table id="tblPending" class="table table-striped table-bordered"> </table></div>
        </div>
    </div>
</div>

<div id="modalpending" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content modal-xs">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Order Detail</h4>
            </div>
            <div id="bodyTT" class="modal-body">
                <div class="row">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="div-form">
                                <label>
                                    Order:
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <label id="txtidorder" class="label-form"></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="div-form">
                                    <label>
                                        Name:
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <label id="txtname" class="label-form"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="div-form">
                                    <label>
                                        Email:
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <label id="txtemail" class="label-form"></label>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-8"> <table id="tblPendingdetail" class="table table-striped table-bordered"> </table></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="closependingdetail" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>