@using System.Web.Optimization;

@{
    ViewBag.Title = "Schedule";
}
@Styles.Render("~/Styles/Dimensiones.css?v=6")
<div class="contentPage"> 
    <div class="row">
        <div class="col-lg-3 col-sm-2 col-xs-1">
            <h3 style="margin-left:30px;">Workshop Schedules</h3>
        </div>
        <div class="col-lg-6 col-sm-8 col-xs-10">
            <div class="row" style="float:right; margin-bottom:20px; margin-top:30px; margin-left:-110px;"">
                <button id="btnaltasched" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAlta">
                    Add Schedule
                </button>
            </div>
            <div class="row" style="margin-top:80px;">
                <div class="table-responsive">
                    <table id="tblSchedule" class="table table-striped table-bordered"> </table>
                </div>
            </div>
            </div>
        <div class="col-lg-3 col-sm-2 col-xs-1">

        </div>
    </div>
</div>

<div id="modalEditSche" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content modal-xs">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Schedule</h4>
            </div>
            <div id="bodyTT" class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="div-form">
                            <label for="txt_day" class="label-form">
                                Day:
                            </label>
                            <select class="selectpicker form-control mobile1 daysche" id="txt_day" style="width: 120px;height: 41px;">
                                <option value="1">Monday</option>
                                <option value="2">Tuesday</option>
                                <option value="3">Wednesday</option>
                                <option value="4">Thursday</option>
                                <option value="5">Friday</option>
                                <option value="6">Saturday</option>
                                <option value="0">Sunday</option>
                            </select>
                            <input type="number" class="form-control borderInput hidden" id="idappo" placeholder="" disabled="disabled">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="div-form">
                            <label for="txt_hour" class="label-form">
                                Hour:
                            </label>
                            <input type="time" class="form-control mobile1" id="txt_hour" value="" style="width: 120px;height: 41px;" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnClosesche" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btneditsche">Save</button>
            </div>
        </div>
    </div>
</div>

<div id="modalAddSche" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content modal-xs">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Schedule</h4>
            </div>
            <div id="bodyTT" class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="div-form">
                            <label for="txt_day" class="label-form">
                                Day:
                            </label>
                            <select class="selectpicker form-control mobile1 daysche" id="txt_dayadd" style="width: 120px;height: 41px;">
                                <option value="1">Monday</option>
                                <option value="2">Tuesday</option>
                                <option value="3">Wednesday</option>
                                <option value="4">Thursday</option>
                                <option value="5">Friday</option>
                                <option value="6">Saturday</option>
                                <option value="0">Sunday</option>
                            </select>
                            <input type="number" class="form-control borderInput hidden" id="idappoadd" placeholder="" disabled="disabled">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="div-form">
                            <label for="txt_hour" class="label-form">
                                Hour:
                            </label>
                            <input type="time" class="form-control mobile1" id="txt_houradd" value="" style="width: 120px;height: 41px;" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnClosescheadd" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnaddsche">Save</button>
            </div>
        </div>
    </div>
</div>