                        </div>
                    </div>
                </div>
                <div class=" col-lg-1 vl2"></div>
                <div class="col-lg-3 col-sm-12 col-xs-12 margginCard1">
                    <div style="text-align:center;">
                        @{ int? suma = 0;}
                        <div class="" style="color: #1A5276; font-size: 17px;">You have</div>
                        @foreach (var item in Model.promo)
